{
  "compilerOptions": {
    // Target and Module
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2020",
      "webworker"
    ],
    "types": [
      "@serwist/next/typings"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    // Allow JavaScript files during gradual migration
    "allowJs": true,
    "checkJs": false,
    // Strict type checking - ✅ ALL FLAGS ENABLED (Phase 3 Complete)
    // Phase 1: ✅ noImplicitAny enabled - catches missing type annotations
    // Phase 2: ✅ strictNullChecks enabled - null safety
    // Phase 3: ✅ All strict flags enabled - full type safety
    "strict": true, // ✅ Phase 3: Full strict mode enabled
    "strictNullChecks": true, // ✅ Phase 3: Enabled - null safety
    "strictFunctionTypes": true, // ✅ Phase 3: Enabled - function type safety
    "strictBindCallApply": true, // ✅ Phase 3: Enabled - bind/call/apply safety
    "strictPropertyInitialization": true, // ✅ Phase 3: Enabled - property initialization safety
    "noImplicitAny": true, // ✅ Phase 1: Enabled - catches missing types
    "noImplicitThis": true, // ✅ Phase 3: Enabled - implicit this safety
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
    "useUnknownInCatchVariables": false,
    "alwaysStrict": true, // ✅ Phase 3: Enabled - always use strict mode
    // Module interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // JSX for React
    "jsx": "react-jsx",
    // Output
    "noEmit": true,
    "incremental": true,
    // Path aliases (matches Next.js conventions)
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/hooks/*": [
        "hooks/*"
      ]
    },
    // Skip lib check for faster builds
    "skipLibCheck": true,
    // Plugins for Next.js
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "components/vx",
    "functions",
    "cypress",
    "__tests__",
    "scripts"
  ]
}
