{
  "name": "bestball-site",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "next dev --turbo -H localhost",
    "build": "node scripts/generate-firebase-messaging-sw.js && next build --webpack",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "npx eslint . --max-warnings=0",
    "lint:errors": "npx eslint . --quiet",
    "lint:stats": "node scripts/lint-metrics.js",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && open coverage/lcov-report/index.html",
    "test:tier0": "jest --coverage --testPathPattern='(payment|auth|security|stripe|paystack|paymongo|xendit)'",
    "test:tier1": "jest --coverage --testPathPattern='(draft|league|user)'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "generate-sw": "node scripts/generate-firebase-messaging-sw.js",
    "security:audit": "./scripts/security-audit.sh",
    "security:fix": "npm audit fix --production",
    "audit:env": "node scripts/audit-env-vars.js",
    "audit:todos": "node scripts/triage-todos.js",
    "audit:any-types": "node scripts/find-any-types.js",
    "analyze": "ANALYZE=true npm run build",
    "build:turbo": "node scripts/generate-firebase-messaging-sw.js && next build",
    "bundle:track": "node scripts/track-bundle-size.js",
    "console:plan": "node scripts/replace-console-logs.js",
    "console:audit": "node scripts/audit-console-usage.js",
    "prepare": "husky || true",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:headed": "cypress run --headed",
    "cy:run:auth": "cypress run --spec 'cypress/e2e/auth/**/*'",
    "cy:run:draft": "cypress run --spec 'cypress/e2e/draft/**/*'",
    "cy:run:payment": "cypress run --spec 'cypress/e2e/payment/**/*'",
    "e2e": "start-server-and-test dev http://localhost:3000 cy:run",
    "e2e:open": "start-server-and-test dev http://localhost:3000 cy:open"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --quiet --fix"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "overrides": {
    "debug": "4.3.1",
    "semver": "7.5.4",
    "path-to-regexp": "6.2.2",
    "undici": "7.14.0",
    "tar": "6.2.1",
    "esbuild": "0.25.9",
    "express": {
      "path-to-regexp": "6.2.2"
    },
    "path-match": {
      "path-to-regexp": "6.2.2"
    },
    "superstatic": {
      "path-to-regexp": "6.2.2"
    },
    "uuid": "^11.0.0",
    "source-map": "^0.7.4"
  },
  "dependencies": {
    "@azure/cognitiveservices-computervision": "^8.2.0",
    "@google-cloud/vision": "^5.3.3",
    "@hello-pangea/dnd": "^18.0.1",
    "@sentry/nextjs": "^10.33.0",
    "@stripe/react-stripe-js": "^5.4.1",
    "@stripe/stripe-js": "^8.6.0",
    "canvas": "^3.1.2",
    "dotenv": "^17.2.1",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.0.1",
    "graphql": "^16.12.0",
    "html2canvas": "^1.4.1",
    "multer": "^2.0.2",
