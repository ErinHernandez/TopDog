    "husky": "^9.1.7",
    "jest": "^30.0.3",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^15.5.0",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.4.27",
    "puppeteer": "^24.17.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.9.3",
    "vercel": "^32.7.2"
  },
  "optionalDependencies": {
    "@next/swc-linux-arm64-gnu": "^16.1.4"
  }
}
